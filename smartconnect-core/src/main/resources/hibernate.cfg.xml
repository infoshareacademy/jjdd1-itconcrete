<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:mysql://0.0.0.0:32768/itconcrete</property>
        <property name="connection.username">root</property>
        <property name="connection.password">pass</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <property name="show_sql">false</property>

        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">create</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="isacademy.jjdd1.itconcrete.smartconnect.database.PromotedLine" />
        <mapping class="isacademy.jjdd1.itconcrete.smartconnect.database.HomeBusStop" />
        <mapping class="isacademy.jjdd1.itconcrete.smartconnect.calendar.BusLineStatistics1" />

    </session-factory>
</hibernate-configuration>